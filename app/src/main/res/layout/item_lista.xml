<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/c_digo" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/txtCodigo"
        android:layout_toEndOf="@id/txtCodigo"
        android:layout_marginStart="15px"
        android:text="@string/nome_completo" />

    <TextView
        android:id="@+id/txtTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCodigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/telefone" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNome"
        android:layout_toRightOf="@id/txtTelefone"
        android:layout_toEndOf="@id/txtTelefone"
        android:layout_marginStart="15px"
        android:text="@string/email" />

</RelativeLayout>